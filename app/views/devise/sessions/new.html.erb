<div class="min-h-screen bg-cover bg-center flex items-center justify-center px-4"
     style="background-image: url('<%= asset_path("food2.png") %>');">

  <div class="w-full max-w-md rounded-2xl bg-white/85 backdrop-blur shadow-lg border border-black/5 p-8">
    <div class="text-center">
      <h2 class="text-2xl font-bold text-gray-900">ログイン</h2>
      <p class="mt-2 text-sm text-gray-600">
        続きを記録して、今日の“貯金”を確認しましょう
      </p>
    </div>

    <div class="mt-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="space-y-5">
          <div>
            <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "mt-2 w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200" %>
          </div>

          <div>
            <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :password,
              autocomplete: "current-password",
              class: "mt-2 w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center gap-2">
              <%= f.check_box :remember_me, class: "rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
              <%= f.label :remember_me, "ログインを記憶する", class: "text-sm text-gray-700" %>
            </div>
          <% end %>

          <div>
            <%= f.submit "ログイン",
              class: "w-full rounded-lg bg-indigo-600 px-6 py-3 text-white font-medium hover:bg-indigo-500 active:bg-indigo-700" %>
          </div>
        </div>

      <% end %>
    </div>

    <div class="mt-6 border-t pt-4 text-center text-sm">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>